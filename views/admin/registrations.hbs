<h1>Gestão de incrições</h1>
<table class="table table-striped" id="registrations-table">
    <thead>
        <tr>
            <th scope="col">Id de Inscrição</th>
            <th scope="col">Email</th>
              <th scope="col">Nome</th>
            <th scope="col">Telefone</th> 
            <th scope="col">Id do evento</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<button type="button" class="btn btn" id="refresh-btn">Atualizar</button>
<button type="button" class="btn btn-primary" id="new-registration-btn">Nova Inscrição</button>

<form id="registration-form">
  <div class="modal fade" id="registration-dlg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Editar Incrição</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">        
          <div class="form-group">
              <label for="idregistration" class="control-label">Id de inscrição</label>
              <input type="text" class="form-control" id="idregistration" />
          </div>
          <div class="form-group">
                <label for="registrationemail" class="control-label">Email</label>
              <input type="email" class="form-control" id="registrationemail" />
              </div>
              <div class="form-group">
                <label for="registrationname" class="control-label">Nome</label>
              <input type="text" class="form-control" id="registrationname" />
          </div>

           <div class="form-group">
                <label for="registrationtelephone" class="control-label">Telefone</label>
              <input type="text" class="form-control" id="registrationtelephone" />
          </div>
         <div class="form-group">
            <!--   
              <input type="text" class="form-control"  /> -->
              <label for="registrationideventfk" class="control-label">Evento</label>
              <select id="registrationideventfk">
            </select>
         
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="registration-save-btn">Guardar</button>
          <button type="button" class="btn btn-danger" id="registration-remove-btn">Remover</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Sair</button>
        </div>
      </div>
    </div>
  </div>
</form>